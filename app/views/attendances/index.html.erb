<%= link_to new_customer_attendance_path, class: "btn btn-primary mb-2" do %>
  <%= icon("fas", "plus", "Nueva Asistencia") %>
<% end %>

<div id="calendar"></div>
<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.0.1/index.global.min.js'></script>
<script>

    document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');

        var calendar = new FullCalendar.Calendar(calendarEl, {
            locale: 'es',
            initialView: 'dayGridMonth',
            events: <%= @events.to_json.html_safe %>
        });

        calendar.render();

    });

</script>