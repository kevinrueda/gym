<%= form_with model: @customer do |form| %>
  <div class="card-body">
    <div class="form-group">
      <%= form.label :name, "Nombre" %>
      <%= form.text_field :name, class: "form-control", :required => true %>
    </div>
    <div class="form-group">
      <%= form.label :dni, "Documento de identificación" %>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-id-card"></i></span>
        </div>
        <%= form.text_field :dni, class: "form-control", :required => true %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :email, "Correo electrónico" %>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-at"></i></span>
        </div>
        <%= form.email_field :email, class: "form-control", :required => true %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :address, "Dirección" %>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-house"></i></span>
        </div>
        <%= form.text_field :address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :birth_date, "Fecha de nacimiento" %>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-birthday-cake"></i></span>
        </div>
        <%= form.date_field :birth_date, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :phone, "Teléfono" %>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-phone"></i></span>
        </div>
        <%= form.text_field :phone, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :occupation, "Ocupación" %>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-briefcase"></i></span>
        </div>
        <%= form.text_field :occupation, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :weight, "Peso" %>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-weight"></i></span>
        </div>
        <%= form.number_field :weight, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :objectives, "Objetivos" %>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text"><i class="fas fa-trophy"></i></span>
        </div>
        <%= form.text_field :objectives, class: "form-control" %>
      </div>
    </div>
    <div class="form-check">
      <%= form.check_box :is_operated, class: "form-check-input" %>
      <%= form.label :is_operated, "Operaciones quirúrgicas", class: "form-check-label" %>
    </div>
    <div class="form-check">
      <%= form.check_box :spine_problems, class: "form-check-input" %>
      <%= form.label :spine_problems, "Problemas de columna", class: "form-check-label" %>
    </div>
    <div class="form-group">
      <%= form.label :others, "Otros" %>
      <%= form.text_area :others, class: "form-control" %>
    </div>
  </div>

  <div class="card-footer">
    <%= form.submit "Guardar", class: "btn btn-primary" %>
  </div>
<% end %>