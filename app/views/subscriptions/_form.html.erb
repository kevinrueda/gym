<%= form_with model: @subscription do |form| %>
  <div class="card-body">
    <div class="form-group">
      <%= form.label :customer_id, "Cliente" %>
      <%= form.collection_select(:customer_id, Customer.all, :id, :info, { include_blank: 'Seleccione un cliente' }, { class: "form-control select2", required: true }) %>
    </div>
    <div class="form-group">
      <%= form.label :plan_id, "Plan" %>
      <%= form.collection_select(:plan_id, Plan.all, :id, :name, { include_blank: 'Seleccione un plan' }, { class: "form-control select2", required: true }) %>
    </div>
  </div>

  <div class="card-footer">
    <%= form.submit "Guardar", class: "btn btn-primary" %>
  </div>
<% end %>