<%= render 'shared/flash' %>
<%= link_to new_subscription_path, class: "btn btn-primary mb-2" do %>
  <%= icon("fas", "plus", "Nueva Suscripción") %>
<% end %>
<div class="table-responsive">
  <table id="subscriptions-datatable" data-turbo="false" class="table table-striped table-bordered nowrap" data-controller="loadSubscriptions destroySubscription" data-source="<%= subscriptions_path(format: :json) %>" style="width: 100%">
    <thead>
    <tr class="table-active">
      <th data-priority="0"></th>
      <th data-priority="1">#</th>
      <th data-priority="5">¿Activa?</th>
      <th data-priority="2">Cliente</th>
      <th data-priority="4">Plan</th>
      <th data-priority="6">Inicio</th>
      <th data-priority="7">Fin</th>
      <th data-priority="3">Acciones</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>
<p class="text-bold">Hoy: $<%= @day_total %></p>
<p class="text-bold">Mes: $<%= @month_total %></p>