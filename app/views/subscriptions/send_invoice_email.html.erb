<div bgcolor="#f6f6f6" style="color: #333; height: 100%; width: 100%;" height="100%" width="100%">
  <table bgcolor="#f6f6f6" cellspacing="0" style="border-collapse: collapse; padding: 40px; width: 100%;" width="100%">
    <tbody>
    <tr>
      <td width="5px" style="padding: 0;"></td>
      <td style="clear: both; display: block; margin: 0 auto; max-width: 600px; padding: 10px 0;">
        <table width="100%" cellspacing="0" style="border-collapse: collapse;">
          <tbody>
          <tr>
            <td style="padding: 0;">
              <%= image_tag "gym_invoice.jpg", style: "height: 50px; max-width: 100%; width: 157px;" %>
            </td>
            <td style="color: #999; font-size: 16px; font-weight: bold; padding: 0; text-align: right;" align="right">
              GYM FUERZA Y SALUD<br/>
              Factura #<%= @subscription.id %><br/>
              <%= DateTime.current.to_date.strftime('%d/%m/%Y') %>
            </td>
          </tr>
          </tbody>
        </table>
      </td>
      <td width="5px" style="padding: 0;"></td>
    </tr>

    <tr>
      <td width="5px" style="padding: 0;"></td>
      <td bgcolor="#FFFFFF" style="border: 1px solid #000; clear: both; display: block; margin: 0 auto; max-width: 600px; padding: 0;">
        <table width="100%" style="background: #f9f9f9; border-bottom: 1px solid #eee; border-collapse: collapse; color: #999;">
          <tbody>
          <tr>
            <td width="50%" style="padding: 20px;">
              <strong style="color: #333; font-size: 24px;">FACTURA #<%= @subscription.id %></strong></td>
            <td align="right" width="50%" style="padding: 20px;"><%= @subscription.customer.name %></td>
          </tr>
          </tbody>
        </table>
      </td>
      <td style="padding: 0;"></td>
      <td width="5px" style="padding: 0;"></td>
    </tr>
    <tr>
      <td width="5px" style="padding: 0;"></td>
      <td style="border: 1px solid #000; border-top: 0; clear: both; display: block; margin: 0 auto; max-width: 600px; padding: 0;">
        <table cellspacing="0" style="border-collapse: collapse; border-left: 1px solid #000; margin: 0 auto; max-width: 600px;">
          <tbody>
          <tr>
            <td valign="top" style="padding: 20px;">
              <h3
                style="
                border-bottom: 1px solid #000;
                  color: #000;
                  font-family: 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif;
                  font-size: 18px;
                  font-weight: bold;
                  line-height: 1.2;
                  margin: 0;
                  margin-bottom: 15px;
                  padding-bottom: 5px;
                "
              >
                Resumen
              </h3>
              <table cellspacing="0" style="border-collapse: collapse; margin-bottom: 40px;">
                <tbody>
                <tr>
                  <td style="padding: 5px 0;">Plan</td>
                  <td align="right" style="padding: 5px 0;"><%= @subscription.plan.name %></td>
                </tr>
                <tr>
                  <td style="padding: 5px 0;">Precio</td>
                  <td align="right" style="padding: 5px 0;"><%= @subscription.plan.price %></td>
                </tr>
                <tr>
                  <td style="padding: 5px 0;">Fecha de inicio</td>
                  <td align="right" style="padding: 5px 0;"><%= @subscription.start.strftime('%d/%m/%Y') %></td>
                </tr>
                <tr>
                <tr>
                  <td style="padding: 5px 0;">Fecha de fin</td>
                  <td align="right" style="padding: 5px 0;"><%= @subscription.end.strftime('%d/%m/%Y') %></td>
                </tr>
                <tr>
                <tr>
                  <td style="border-bottom: 2px solid #000; border-top: 2px solid #000; font-weight: bold; padding: 5px 0;">Total
                  </td>
                  <td align="right" style="border-bottom: 2px solid #000; border-top: 2px solid #000; font-weight: bold; padding: 5px 0;">$<%= @subscription.plan.price %></td>
                </tr>
                <tr>
                <tr>
                  <td style="padding: 5px 0;">GYM FUERZA Y SALUD - 39 Años de experiencia. <br> <i>¡Gracias por su compra!</i></td>
                  <td align="right" style="padding: 5px 0;"></td>
                </tr>
                <tr>
                </tbody>
              </table>
            </td>
          </tr>
          </tbody>
        </table>
      </td>
      <td width="5px" style="padding: 0;"></td>
    </tr>
    </tbody>
  </table>
</div>
